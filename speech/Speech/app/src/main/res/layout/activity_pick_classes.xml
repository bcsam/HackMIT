<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.cloud.android.speech.Activities.PickClassesActivity">

    <TextView
        android:id="@+id/tvClassBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/primary_dark"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="32sp"
        android:layout_margin="@dimen/spacing_medium"
        android:text="Classes" />

    <android.support.v7.widget.CardView
        android:layout_below="@id/tvClassBadge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="22sp"
                android:text="Multivariable Calculus"/>

            <TextView
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:text="MATH1812"/>

            <TextView
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:text="Dr. James Aspnes"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
